{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "oscp-spatial-content-discovery",
    "description": "OSCP Spatial Content Discovery Service (Open AR Cloud)",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },

  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },


  "servers": [
    {
      "url": "/",
      "description": "Local Dev"
    }
  ],

  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/scrs/{topic}": {
      "get": {
        "summary": "Get SCRs within given bbox",
        "parameters": [
          {
            "in": "path",
            "name": "topic",
            "required": true,
            "description": "SCR topic"
          },
          {
            "in": "query",
            "name": "bbox",
            "required": true,
            "description": "SCR bbox"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Scr"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Failed"
          }
        }
      },
      "post": {
        "summary": "Create a new SCR",
        "parameters": [
          {
            "in": "path",
            "name": "topic",
            "required": true,
            "description": "SCR topic"
          }
        ],
        "requestBody": {
          "description": "SCR Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/ScrDto"
              }
            }
          }
        },
        "produces": ["text/html"],
        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Failed"
          }
        },
          "security": [{
            "bearerAuth": ["create:scrs"]
          }]
      }
    },
    "/scrs/{topic}/{id}": {
      "get": {
        "summary": "Get SCR with given ID",
        "parameters": [
          {
            "in": "path",
            "name": "topic",
            "required": true,
            "description": "SCR topic"
          },
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "SCR id"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Scr"
                }
              }
            }
          },
          "404": {
            "description": "Failed"
          }
        }
      },
      "delete": {
        "summary": "Delete SCR with given ID",
        "parameters": [
          {
            "in": "path",
            "name": "topic",
            "required": true,
            "description": "SCR topic"
          },
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "SCR id"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Failed"
          }
        },
        "security": [{
          "bearerAuth": ["delete:scrs"]
        }]
      }
    }
  },
  "definitions": {
    "Scr": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "geopose": {
          "type": "object",
          "properties": {
            "north": {
              "type": "number"
            },
            "east": {
              "type": "number"
            },
            "vertical": {
              "type": "number"
            },
            "qNorth": {
              "type": "number"
            },
            "qEast": {
              "type": "number"
            },
            "qVertical": {
              "type": "number"
            },
            "qW": {
              "type": "number"
            }
          }
        },
        "url": {
          "type": "string"
        },
        "tenant": {
          "type": "string"
        },
        "timestamp": {
          "type": "string"
        }
      }
    },
    "ScrDto": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "geopose": {
          "type": "object",
          "properties": {
            "north": {
              "type": "number"
            },
            "east": {
              "type": "number"
            },
            "vertical": {
              "type": "number"
            },
            "qNorth": {
              "type": "number"
            },
            "qEast": {
              "type": "number"
            },
            "qVertical": {
              "type": "number"
            },
            "qW": {
              "type": "number"
            }
          }
        },
        "url": {
          "type": "string"
        },
        "tenant": {
          "type": "string"
        },
      }
    }
  }
}
