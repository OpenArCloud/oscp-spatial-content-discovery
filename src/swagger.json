{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "oscp-spatial-content-discovery",
    "description": "OSCP Spatial Content Discovery Service (Open AR Cloud)",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },

  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },

  "servers": [
    {
      "url": "/",
      "description": "Local Dev"
    }
  ],

  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/scrs/{topic}": {
      "get": {
        "summary": "Get SCRs covering h3Index",
        "parameters": [
          {
            "in": "path",
            "name": "topic",
            "required": true,
            "description": "SCR topic"
          },
          {
            "in": "query",
            "name": "h3Index",
            "required": false,
            "description": "SCR h3 Index"
          },
          {
            "in": "query",
            "name": "placekey",
            "required": false,
            "description": "SCR PlaceKey"
          },
          {
            "in": "query",
            "name": "keywords",
            "required": false,
            "description": "SCR keywords"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Scr"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Failed"
          }
        }
      },
      "post": {
        "summary": "Create a new SCR",
        "parameters": [
          {
            "in": "path",
            "name": "topic",
            "required": true,
            "description": "SCR topic"
          }
        ],
        "requestBody": {
          "description": "SCR Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/ScrDto"
              }
            }
          }
        },
        "produces": ["text/html"],
        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "text/html": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Failed"
          }
        },
        "security": [
          {
            "bearerAuth": ["create:scrs"]
          }
        ]
      }
    },
    "/scrs/{topic}/{id}": {
      "get": {
        "summary": "Get SCR with given ID",
        "parameters": [
          {
            "in": "path",
            "name": "topic",
            "required": true,
            "description": "SCR topic"
          },
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "SCR id"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Scr"
                }
              }
            }
          },
          "404": {
            "description": "Failed"
          }
        }
      },
      "delete": {
        "summary": "Delete SCR with given ID",
        "parameters": [
          {
            "in": "path",
            "name": "topic",
            "required": true,
            "description": "SCR topic"
          },
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "SCR id"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Failed"
          }
        },
        "security": [
          {
            "bearerAuth": ["delete:scrs"]
          }
        ]
      },
      "put": {
        "summary": "Update SCR with given ID",
        "parameters": [
          {
            "in": "path",
            "name": "topic",
            "required": true,
            "description": "SCR topic"
          },
          {
            "in": "path",
            "name": "id",
            "required": true,
            "description": "SCR id"
          }
        ],
        "requestBody": {
          "description": "SCR Object",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/definitions/ScrDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Failed"
          }
        },
        "security": [
          {
            "bearerAuth": ["update:scrs"]
          }
        ]
      }
    },
    "/tenant/scrs/{topic}": {
      "get": {
        "summary": "Get all own SCRs for tenant",
        "parameters": [
          {
            "in": "path",
            "name": "topic",
            "required": true,
            "description": "SCR topic"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Scr"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Failed"
          }
        },
        "security": [
          {
            "bearerAuth": ["read:scrs"]
          }
        ]
      }
    }
  },
  "definitions": {
    "Quaternion": {
      "type": "object",
      "properties": {
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "z": {
          "type": "number"
        },
        "w": {
          "type": "number"
        }
      }
    },
    "GeoPose": {
      "type": "object",
      "properties": {
        "longitude": {
          "type": "number"
        },
        "latitude": {
          "type": "number"
        },
        "ellipsoidHeight": {
          "type": "number"
        },
        "quaternion": {
          "$ref": "#/definitions/Quaternion"
        }
      }
    },
    "Ref": {
      "type": "object",
      "properties": {
        "contentType": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "Def": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    },
    "Content": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "placekey": {
          "type": "string"
        },
        "refs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Ref"
          }
        },
        "geopose": {
          "$ref": "#/definitions/GeoPose"
        },
        "size": {
          "type": "number"
        },
        "bbox": {
          "type": "string"
        },
        "defs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Def"
          }
        }
      }
    },
    "Scr": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "content": {
          "$ref": "#/definitions/Content"
        },
        "tenant": {
          "type": "string"
        },
        "timestamp": {
          "type": "number"
        }
      }
    },
    "ScrDto": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "content": {
          "$ref": "#/definitions/Content"
        }
      }
    }
  }
}
